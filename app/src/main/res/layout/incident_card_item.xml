<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/incidentCode"
            android:text="IR-XXXXXX"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/incidentType"
            android:text="Crime"
            android:textColor="#444"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="Date:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/incidentDate"
            android:text="2025-01-01"
            android:textColor="#333" />

        <TextView
            android:text="Location:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/incidentLocation"
            android:text="Location goes here"
            android:textColor="#444" />

        <TextView
            android:id="@+id/incidentPriority"
            android:text="Priority: High"
            android:textColor="#B00020"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnViewDetails"
                android:text="View Details"
                android:background="#DDDDDD"
                android:textColor="#000"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEscalate"
                android:text="Escalate"
                android:background="#2563EB"
                android:textColor="#fff"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnReject"
                android:text="Reject"
                android:background="#D32F2F"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
