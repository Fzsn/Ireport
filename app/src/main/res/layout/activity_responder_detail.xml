<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ResponderDetailActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomActionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_incidentCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:text="Incident #N/A"/>
                    <TextView
                        android:id="@+id/detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:layout_marginTop="4dp"
                        android:text="Status: Assigned"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/detail_incidentImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#CCC"
                    android:contentDescription="Incident image"
                    tools:src="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detail_incidentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailLabel"
                        android:text="Type: Fire"/>

                    <TextView
                        android:id="@+id/detail_reporterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailLabel"
                        android:text="Reporter: Juan Dela Cruz"/>

                    <TextView
                        android:id="@+id/detail_dateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailLabel"
                        android:text="Date/Time: 2025-10-26, 10:30 AM"/>

                    <TextView
                        android:id="@+id/detail_additionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailValue"
                        android:text="Additional Info: Suspicious activity reported near the commercial district"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Location Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mapCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/primary_default"
                            android:contentDescription="Location icon"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ“ Incident Location"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <!-- Address -->
                    <TextView
                        android:id="@+id/detail_address_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="8dp"
                        android:text="207-203 Dulongbayan Iraya Rd, Daet"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineHeight="20dp"/>

                    <!-- Coordinates -->
                    <TextView
                        android:id="@+id/detail_coordinate_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="4dp"
                        android:text="14.123456, 122.987654"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace"/>

                    <TextView
                        android:id="@+id/detail_location_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="12dp"
                        android:text="Camarines Norte, Philippines"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <!-- Static Map Placeholder -->
                    <ImageView
                        android:id="@+id/detail_mapImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="@color/background_light"
                        android:contentDescription="Map view"/>

                    <!-- Open in Maps Button -->
                    <LinearLayout
                        android:id="@+id/mapClickableArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/primary_default"
                            android:contentDescription="Map icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Open in Google Maps"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_default"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Status Timeline Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Status Timeline"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Timeline Container -->
                    <LinearLayout
                        android:id="@+id/timelineContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Report Submitted (always shown) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Timeline Dot and Line -->
                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/timeline_dot_pending"/>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"/>
                            </LinearLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Report Submitted"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:id="@+id/timeline_created_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Assigned Status -->
                        <LinearLayout
                            android:id="@+id/timeline_assigned_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/timeline_dot_assigned"/>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assigned to Responder"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:id="@+id/timeline_assigned_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- In Progress Status -->
                        <LinearLayout
                            android:id="@+id/timeline_inprogress_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/timeline_dot_inprogress"/>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Responder En Route"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:id="@+id/timeline_inprogress_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Resolved Status -->
                        <LinearLayout
                            android:id="@+id/timeline_resolved_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/timeline_dot_resolved"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Incident Resolved"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50"/>

                                <TextView
                                    android:id="@+id/timeline_resolved_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomActionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAccomplishReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOMPLISH REPORT"
            android:backgroundTint="#006400"
            android:textColor="#FFF"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>