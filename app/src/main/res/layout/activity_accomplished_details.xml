<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AccomplishedDetailsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_incidentCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:text="Incident #N/A"/>
                    <TextView
                        android:id="@+id/detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#006400"
                        android:layout_marginTop="4dp"
                        android:text="Status: FINALIZED"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolution Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/assignmentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detail_assignment_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assigned Responder: N/A"
                        android:textSize="14sp"
                        android:textColor="#333"/>

                    <TextView
                        android:id="@+id/detail_reporterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reported by: N/A"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/detail_incidentImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#CCC"
                android:layout_marginBottom="16dp"
                android:contentDescription="Incident image"
                tools:src="@tools:sample/avatars"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incident Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detail_incidentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type: Fire"/>

                    <TextView
                        android:id="@+id/detail_dateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date/Time: 2025-10-26, 10:30 AM"/>

                    <TextView
                        android:id="@+id/detail_address_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address: 207-203 Dulongbayan Iraya Rd"/>

                    <TextView
                        android:id="@+id/detail_additionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional Info: Suspicious activity reported near the commercial district"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/mapCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:id="@+id/mapClickableArea"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_location_on_red"
                        app:tint="#D32F2F"
                        android:contentDescription="Map marker icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map View"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#555"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="#666"
                            android:contentDescription="Location pin"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coordinates"
                                android:textSize="12sp"
                                android:textColor="#555"/>
                            <TextView
                                android:id="@+id/detail_coordinate_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14.5995° N, 120.9842° E"
                                android:textSize="14sp"
                                android:textColor="#333"/>
                            <TextView
                                android:id="@+id/detail_location_context"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Camarines Norte, Philippines"
                                android:textSize="12sp"
                                android:textColor="#777"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>