<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/caseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Type + Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/caseTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medical Emergency"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/caseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASSIGNED"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/status_badge_assigned"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- Incident ID -->
        <TextView
            android:id="@+id/caseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#IR-ABC12345"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp"/>

        <!-- Date/Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary"
                android:contentDescription="Date"/>

            <TextView
                android:id="@+id/caseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 8, 2025"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="@color/text_light"/>

            <TextView
                android:id="@+id/caseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <!-- Location Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location_pin"
                app:tint="@color/text_secondary"
                android:contentDescription="Location"/>

            <TextView
                android:id="@+id/caseLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location Address"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="6dp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Coordinates Row -->
        <LinearLayout
            android:id="@+id/coordinatesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location_on_red"
                app:tint="@color/text_light"
                android:contentDescription="Coordinates"/>

            <TextView
                android:id="@+id/caseCoordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14.1234, 122.5678"
                android:textSize="11sp"
                android:textColor="@color/text_light"
                android:fontFamily="monospace"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>